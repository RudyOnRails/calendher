= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :date
    = f.text_field :date, :"data-date-format" => "yy-mm-dd", :"data-behaviour" => 'datepicker'
  
  .actions
    = f.submit 'Save'
